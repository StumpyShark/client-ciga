<Window x:Class="AAAAAAAAAAAAAAAAAA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AAAAAAAAAAAAAAAAAA"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="SearchBox" Width="200" Margin="0,0,10,0"/>
            <Button Content="Поиск" Click="SearchButton_Click"/>
        </StackPanel>

        <ListView x:Name="GamesListView" Grid.Row="1" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Title}" Width="200"/>
                    <GridViewColumn Header="Жанр" DisplayMemberBinding="{Binding Genre}" Width="120"/>
                    <GridViewColumn Header="Рейтинг" DisplayMemberBinding="{Binding Rating}" Width="80"/>
                    <GridViewColumn Header="Размер" DisplayMemberBinding="{Binding Size}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="DownloadButton" Content="Скачать" Width="100" Margin="0,0,10,0" Click="DownloadButton_Click"/>
            <ProgressBar x:Name="DownloadProgress" Width="200" Height="20" Minimum="0" Maximum="100"/>
        </StackPanel>
    </Grid>
</Window>
